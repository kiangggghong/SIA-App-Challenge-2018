<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/colorPrimary"
    android:layout_alignParentStart="true"
    android:id="@+id/layout_user"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textViewName"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Welcome, Mr Wong" />

    <TextView
        android:id="@+id/textViewKfId"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewName"
        android:text="K1234567" />

    <TextView
        android:id="@+id/textViewMiles"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="0 Kf Miles" />

    <TextView
        android:id="@+id/textViewKrisFlyer"
        android:layout_width="wrap_content"
        android:textColor="#FFF"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewMiles"
        android:layout_below="@+id/textViewMiles"
        android:text="Kris Flyer" />
</RelativeLayout>